#include "controllworkerthread.h"
#include "workerthread.h"
controllWorkerThread::controllWorkerThread()
{
    // 新的工作,工作线程转交给一个QThread对象
    WorkerThread * workerthread = new WorkerThread;
    workerthread->moveToThread(&this->workerThread);
    
    // QThread对象结束后,要把工作线程的对象释放掉
    connect(&this->workerThread,&QThread::finished,workerthread,&QObject::deleteLater);
    
}
